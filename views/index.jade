extends layout

block content

  div.jumbotron
    h1.text-center= title
  div.container
    table
      colgroup
        col(span="1" style="width: 5%;")
        col(span="1" style="width: 95%;")
      tr(class="space-under")
        td(class="butt-pad")
          button(type="button" class="btn btn-default" id="i_lock")
            i(id="i_icon" class="fa fa-unlock-alt fa-2x")
        td 
          select(id="iso_select" class="form-control" data-iso=iso)
            option(value=100) ISO 100
            option(value=200) ISO 200
            option(value=400) ISO 400
            option(value=800) ISO 800
            option(value=1600) ISO 1600
            option(value=3200) ISO 3200
      tr(class="space-under")
        td(class="butt-pad")
          button(type="button" class="btn btn-default" id="f_lock")
            i(id="f_icon" class="fa fa-unlock-alt fa-2x")
        td
          div#f_slider
          input(type="text" id="f_amount" class="form-control" placeholder=("Recommended Aperture f/" + aperture) readonly="true" data-aperture=aperture)
      tr(class="space-under")
        td(class="butt-pad")
          button(type="button" class="btn btn-default" id="s_lock")
            i(id="s_icon" class="fa fa-unlock-alt fa-2x")
        td
          div#s_slider
          input(type="text" id="s_amount" class="form-control" placeholder=("Recommended Shutter Speed " + shutterStr) readonly="true" data-shutter=shutter)
      tr
    input.btn(type="button", class="btn btn-default btn-lg btn-block", value="Capture EXIF")
  div.jumbotron(id="custom-jumbo")
    p.small.text-center JRAK CO. 2014